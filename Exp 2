
USE school_db;

CREATE TABLE IF NOT EXISTS faculty (
    faculty_id INT PRIMARY KEY,
    faculty_name VARCHAR(50) NOT NULL UNIQUE,
    budget DECIMAL(12,2) NOT NULL DEFAULT 0.00,
    established_year INT,
    CHECK (established_year >= 1900)
);

INSERT INTO faculty (faculty_id, faculty_name, budget, established_year)
VALUES (1, 'Engineering Faculty', 600000.00, 1998);

CREATE TABLE IF NOT EXISTS students (
    student_id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(100) NOT NULL,
    email VARCHAR(100) UNIQUE,
    faculty_id INT NOT NULL,
    admission_date DATE DEFAULT CURRENT_DATE,
    age INT,
    CONSTRAINT fk_students_faculty FOREIGN KEY (faculty_id)
        REFERENCES faculty(faculty_id)
        ON DELETE RESTRICT
        ON UPDATE CASCADE
);

INSERT INTO students (name, email, faculty_id, age)
VALUES ('Asha', 'asha@example.com', 1, 21);
